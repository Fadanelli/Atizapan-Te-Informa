<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="25dp"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:visibility="gone"></ProgressBar>

    <RelativeLayout
        android:id="@+id/ContenidoP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"

        >

        <LinearLayout
            android:id="@+id/ContenidoDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_thin"
                android:text="Atizapán"
                android:textColor="@color/white"
                android:textSize="60sp">

            </TextView>

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_thin"
                android:text="Fecha: "
                android:textColor="@color/white"
                android:textSize="20sp">

            </TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp">

            </Space>

            <ImageView
                android:id="@+id/imagencl"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/sun"
                app:tint="#FFF" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Contenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/barlow_thin"
                android:text="Clima de hoy"
                android:textColor="@color/white"


                android:textSize="20sp">

            </TextView>


            <TextView
                android:id="@+id/temperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/barlow_thin"
                android:text="24°C"
                android:textColor="@color/white"
                android:textSize="80sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"


                >

                <TextView
                    android:id="@+id/TempMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_thin"
                    android:text="Temp Min"
                    android:textColor="@color/white"
                    android:textSize="20sp">

                </TextView>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"></Space>

                <TextView
                    android:id="@+id/TempMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_thin"
                    android:text="Temp Max"
                    android:textColor="@color/white"
                    android:textSize="20sp">

                </TextView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ContDetalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shapecard"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/humidity"
                        app:tint="#FFF">

                    </ImageView>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content">

                    </Space>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="Humedad"

                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <TextView
                        android:id="@+id/dhumedad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="12.33"
                        android:textColor="@color/white"></TextView>


                </LinearLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content">

                </Space>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shapecard"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/temp"
                        app:tint="#FFF">

                    </ImageView>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content">

                    </Space>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="Presión"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <TextView
                        android:id="@+id/dpresi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="40 °C"
                        android:textColor="@color/white">

                    </TextView>


                </LinearLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content">

                </Space>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shapecard"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/wind"
                        app:tint="#FFF">

                    </ImageView>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content">

                    </Space>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="Viento"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <TextView
                        android:id="@+id/dviento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="78 km/h"
                        android:textColor="@color/white">

                    </TextView>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content">

                    </Space>


                </LinearLayout>


            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp">

            </Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_thin"
                android:text="Temperaturas: "
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="2dp">

            </Space>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shapecard"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sunrise"
                        app:tint="#FFF">

                    </ImageView>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content">

                    </Space>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text=" Mañana"

                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <TextView
                        android:id="@+id/dMañana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="12.33"
                        android:textColor="@color/white"></TextView>


                </LinearLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content">

                </Space>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shapecard"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sun"
                        app:tint="#FFF">

                    </ImageView>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content">

                    </Space>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="Tarde"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <TextView
                        android:id="@+id/dTarde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="40 °C"
                        android:textColor="@color/white">

                    </TextView>


                </LinearLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content">

                </Space>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shapecard"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sunset"
                        app:tint="#FFF">

                    </ImageView>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content">

                    </Space>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="Noche"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <TextView
                        android:id="@+id/dNoche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_thin"
                        android:text="78 km/h"
                        android:textColor="@color/white">

                    </TextView>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content">

                    </Space>


                </LinearLayout>


            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp">

            </Space>


            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bar"
                    android:backgroundTint="#000000"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/volver"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/black"
                        android:scaleType="fitCenter"
                        android:src="@drawable/volver"
                        app:tint="#FFF">

                    </ImageButton>


                    <Space
                        android:layout_width="70dp"
                        android:layout_height="wrap_content">

                    </Space>

                    <Space
                        android:layout_width="70dp"
                        android:layout_height="wrap_content">

                    </Space>

                    <ImageButton
                        android:id="@+id/btnweb"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/black"
                        android:scaleType="fitCenter"
                        android:src="@drawable/grafica"
                        app:tint="#FFF">

                    </ImageButton>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
